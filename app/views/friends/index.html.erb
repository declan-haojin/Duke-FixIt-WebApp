<table class="table is-striped is-hoverable is-fullwidth is-bordered">
  <thead>
    <tr>
      <th>First Name</th>
      <th>Last Name</th>
      <th>Email</th>
      <th>Phone</th>
      <th>Issue Description</th>
      <th>Created Date</th>
      <th>Update Date</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>

    <% @friends.each do |friend| %>
      <tr>

        <td><%= friend.first_name%></td>
        <td><%= friend.last_name%></td>
        <td><%= friend.email%></td>
        <td><%= friend.phone%></td>
        <td><%= friend.twitter%></td>
        <td><%= friend.created_at.strftime('%m-%d-%Y')%></td>
        <td><%= friend.updated_at.strftime('%m-%d-%Y')%></td>


        <td><%= link_to "Show", friend %></td>
        <td><%= link_to "Edit", edit_friend_path(friend) %></td>

      </tr>
    <% end %>

  </tbody>

</table>

<% if user_signed_in? %>

<%= link_to "New ticket", new_friend_path, class:"button is-success" %>

<% end %>

