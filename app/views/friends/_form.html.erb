  <% end %>

  <div class="field">
    <label class="label">First Name</label>
      <div class="control">
        <%= form.text_field :first_name, class:"input"%>
      </div>
  </div>

  <div class="field">
    <label class="label">Last Name</label>
      <div class="control">
        <%= form.text_field :last_name, class:"input"%>
      </div>
  </div>

  <div class="field">
    <label class="label">Email</label>
      <div class="control">
        <%= form.text_field :email, class:"input"%>
      </div>
  </div>

  <div class="field">
    <label class="label">Phone</label>
      <div class="control">
        <%= form.text_field :phone, class:"input"%>
      </div>
  </div>

  <div class="field">
    <label class="label">Issue Description</label>
      <div class="control">
        <%= form.text_field :twitter, class:"input"%>
      </div>
  </div>

  <br/>

  <div class="field">
    <div class="control">
      <%= form.submit class:"button is-success", value: "Create ticket" %>
    </div>
  </div>
